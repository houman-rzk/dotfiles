#!/bin/sh

if [ "$1" = "clear" ]; then
  wl-copy --clear
  wl-copy -p --clear
  notify 3000 "Clipboards cleared"
  exit
fi

selection="$(cliphist list | rofi -dmenu -p "Clipboard:" | cliphist decode)"

[ -z "$selection" ] && exit 1

wl-copy "$selection"
wl-copy -p "$selection"

notify -t 2000 -h "Copied: $(echo "$selection" | head -n 1 | cut -c 1-20)..."
