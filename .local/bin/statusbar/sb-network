#!/bin/sh

logo=" "

test() { ping -c 1 9.9.9.9 >/dev/null 2>&1 || ping -c 1 archlinux.org >/dev/null 2>&1 || logo=" ";}

test

case $BLOCK_BUTTON in
	1) notify-send "Internet module" "IP: $(curl -sf ifconfig.me 2>/dev/null)" ;;
	2) setsid -f "$TERMINAL" -e nmtui ;;
	3) notify-send "Internet module" "\- Left-click to get IP" "\- Middle-click to open connection manager (nmtui)" ;;
esac

echo -n "$logo"
