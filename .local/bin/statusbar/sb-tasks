#!/bin/sh

case $BLOCK_BUTTON in
	1) dunstify -u low -r 1 -t 10000 "Tasks" "$(task | head -n -2 | tail -n +2)" ;;
	2) "$TERMINAL" -e taskwarrior-tui ;;
	#2) xdotool key super+shift+t ;;
	3) dunstify -u low -r 1 -t 5000 "Tasks Module" "\- Left-click to show tasks
\- Middle-click to run task manager" ;;
esac

tasks="$(task | tail -n 1 | awk '{print $1}')"
[ "$tasks" -ge 1 ] && tasks=" $tasks"

echo "  ÔêÆ$tasks  "
