#!/bin/sh
<<"C"
case $(date '+%I') in
	"00") clock="ðŸ•›" ;;
	"01") clock="ðŸ•" ;;
	"02") clock="ðŸ•‘" ;;
	"03") clock="ðŸ•’" ;;
	"04") clock="ðŸ•“" ;;
	"05") clock="ðŸ•”" ;;
	"06") clock="ðŸ••" ;;
	"07") clock="ðŸ•–" ;;
	"08") clock="ðŸ•—" ;;
	"09") clock="ðŸ•˜" ;;
	"10") clock="ðŸ•™" ;;
	"11") clock="ðŸ•š" ;;
	"12") clock="ðŸ•›" ;;
esac
C

case $BLOCK_BUTTON in
	1) notify-send "Calendar" "$(cal -m --color=always | sed "s/..7m/<b><span color=\"orange\">/;s|..27m|</span></b>|")" ;;
	2) ;;
	3) notify-send "Time & Calendar Module" "\- Left-click to see calendar
\- Middle-click " ;;
esac

date "+%R"
