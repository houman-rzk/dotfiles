#!/bin/sh

day="$(date +%d)"

case $BLOCK_BUTTON in
	1) dunstify -u low -r 1 -t 5000 "Calendar" "$(cal -m --color=never | sed "s/$day/<b><span color=\"orange\">$day<\/span><\/b>/g")" ;;
	2) ;;
	3) dunstify -u low -r 1 -t 5000 "Time & Calendar Module" "\- Left-click to see calendar
\- Middle-click to ..." ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+  %R  "
