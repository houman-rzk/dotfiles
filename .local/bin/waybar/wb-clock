#!/bin/sh

day="$(date +%d)"
cal="$(cal -m --color=never | head -n 1)\n$(cal -m --color=never | tail -n +2 | sed "s/$day/<b><span color=\"orange\">$day<\/span><\/b>/")"

case $BLOCK_BUTTON in
	1) dunstify -u low -r 1 -t 5000 "Calendar" "$cal" ;;
	2) ;;
	3) dunstify -u low -r 1 -t 5000 "Time & Calendar Module" "\- Left-click to see calendar
\- Middle-click to ..." ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

#date "+  %R  "
date "+  %a %d, %R  "
