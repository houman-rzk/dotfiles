#!/usr/bin/env bash

shopt -s nullglob globstar

typeit=0
if [[ $1 == "--type" ]]; then
	typeit=1
	shift
fi

if [[ -n $WAYLAND_DISPLAY ]]; then
	dmenu=dmenu-wl
	xdotool="ydotool type --file -"
elif [[ -n $DISPLAY ]]; then
	dmenu=dmenu
	xdotool="xdotool type --clearmodifiers --file -"
else
	echo "Error: No Wayland or X11 display detected" >&2
	exit 1
fi

prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )

password=$(printf '%s\n' "${password_files[@]}" | "$dmenu" -i -l 15 -p 'Select password: ' "$@")

[[ -n $password ]] || exit

if ! echo "" | gpg --sign --batch --no-tty --pinentry-mode cancel --local-user "$(cat "$PASSWORD_STORE_DIR/.gpg-id")" -o /dev/null >/dev/null 2>&1; then
  pass generate -f passmenu.tmp 20 >/dev/null 2>&1
  #st -n "spterm" -g "120x20" -e pass passmenu.tmp
  st -e pass passmenu.tmp
	pass rm -f passmenu.tmp >/dev/null 2>&1
fi

secret="$(pass show "$password")"
printf "$secret" | xclip -i -sel p

if [[ $typeit -eq 0 ]]; then
	#pass show -c "$password" 2>/dev/null
	#printf "$secret" | xclip -i -sel p
else
	pass show "$password" | { IFS= read -r pass; printf %s "$pass"; } | $xdotool
	#printf "$secret" | xdotool type --file -
fi
