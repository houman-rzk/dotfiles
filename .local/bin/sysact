#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nğŸšª logout\nğŸ”ƒ reboot\nğŸ”´ shutdown\nğŸ’¤ sleep" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	"ğŸšª logout") kill -TERM "$(wmpid)" ;;
	'ğŸ’¤ sleep') slock $ctl suspend -i ;;
	'ğŸ”ƒ reboot') sudo reboot ;;
	'ğŸ”´ shutdown') sudo shutdown -hP now ;;
	*) exit 1 ;;
esac
