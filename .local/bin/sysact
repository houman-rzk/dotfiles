#!/bin/sh

# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "⭘ hibernate\n lock\n󰍃 logout\n reboot\n shutdown\n⏾ sleep" | dmenu -i -n -p 'Action: ')" in
	' lock') music-control pause ; slock ;;
	'󰍃 logout') kill -9 -1 ;;
	'⏾ sleep') music-control pause ; slock $ctl suspend -i ;;
	' reboot') $ctl reboot ;;
	'⭘ hibernate') music-control pause ; slock $ctl hybrid-sleep -i ;;
	' shutdown'|'off'|'poweroff') $ctl poweroff ;;
	*) exit 1 ;;
esac

rfkill unblock wifi
update-dwmblocks &
