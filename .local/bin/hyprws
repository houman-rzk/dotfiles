#!/bin/bash

workspaces=9

current="$(hyprctl activeworkspace | grep "ID " | cut -d' ' -f3)"

next=$((current+1))
prev=$((current-1))

if [ "$current" -eq $workspaces ]; then
	next=1
elif [ "$current" -eq 1 ]; then
	prev=$workspaces
fi

if [ "$1" == "n" ]; then
	hyprctl dispatch workspace "$next"
elif [ "$1" == "mn" ]; then
	hyprctl dispatch movetoworkspace "$next"
elif [ "$1" == "p" ]; then
	hyprctl dispatch workspace "$prev"
elif [ "$1" == "mp" ]; then
	hyprctl dispatch movetoworkspace "$prev"
fi
