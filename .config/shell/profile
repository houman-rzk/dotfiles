# This should come first
export PATH="$PATH$(find ~/.local/bin -type d -exec echo -n :'{}' ';')"

# Default programs
export TERMINAL="st"
export EDITOR="nvim"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"
export LESSHISTFILE="-"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export ZSH="$ZDOTDIR/oh-my-zsh"
export HISTSIZE=10000000
export SAVEHIST=10000000
export HISTFILE="$XDG_DATA_HOME/shell/history"
export XAUTHORITY="$XDG_CONFIG_HOME/x11/Xauthority"
#export INPUTRC="$XDG_CONFIG_HOME/shell/inputrc"
export XDG_RUNTIME_DIR="$XDG_CACHE_HOME/runtime-dir"
export LESSHISTFILE="-"

export CM_HISTLENGTH=30 # Clipmenu displayed length
export ALIASRC="$XDG_CONFIG_HOME/shell/aliasrc"
export DOWNLOADS_DIR="$XDG_DATA_HOME/Downloads"
export PICTURES_DIR="$XDG_DATA_HOME/Pictures"
export WALLPAPERS_DIR="$PICTURES_DIR/Wallpapers"
export WALLPAPER_LINK="$XDG_DATA_HOME/bg"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"

# SCREEN CONFIG
# Sets the default display profile (see 'cycle-displays' script)
export DEFAULT_DISPLAY_PROFILE="INTERNAL_ONLY"
export DISPLAY_FILE="/tmp/current_display_profile"
echo "$DEFAULT_DISPLAY_PROFILE" > "$DISPLAY_FILE"

# Default monitors (got them using 'xrandr -q')
export INTERNAL_DISPLAY="eDP-1"
export EXTERNAL_DISPLAY="HDMI-2"

#Start x; this line should always be the last one
exec startx "$XINITRC" >/dev/null 2>&1
