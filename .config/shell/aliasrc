#!/bin/sh

# Use superior neovim
alias vim="nvim" vimdiff="nvim -d"

# Remove need for sudo in these commands
for command in pacman shutdown reboot mount umount tor systemctl visudo fdisk cfdisk ufw; do
	alias "$command"="sudo $command"
done ; unset command

# Add some color to your life
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto"

# Shorter commands
alias \
	l='ls' \
	la='ls -la' \
	ll='ls -l' \
	ka="killall" \
	g="git" \
	e="$EDITOR" \
	v="$EDITOR" \
	es="edit-script" \
	tt="taskwarrior-tui" \
	as="add-script" \
	trr="transmission-remote" \
	td="transmission-daemon" \
	untar="tar -xvf" \
	pi="pacman -S" \
	piu="pacman -Syu" \
	ue="pacman -Syu --noconfirm && exit" \
	pr="pacman -Rs" \
    nb="newsboat" \
    dm="udisksctl mount -b" \
    dum="udisksctl unmount -b" \
    dpo="udisksctl power-off -b" \
    ts="torsocks" \
	p="pacman" \
    sctl="systemctl" \
    ud="update-dwmblocks" \
    clc="clear-clipboards" \
    mkx="chmod u+x" \
    sxiv="sxiv -a" \
    iv="sxiv" \
    sv="sudo $EDITOR" \
    z="zathura" \
    ot="setsid -f st" \
    pass="password"

# Main aliases
alias \
	mk='make && sudo make clean install' \
	lo='kill -9 -1 ; touch /home/hache/asdf' \
	mo='mk && lo' \
	monerod="monerod --data-dir $XDG_DATA_HOME/bitmonero" \
	off="shutdown -h now" \
	tst="tabbed -r2 st -w '' && exit" \
    bl="cat /sys/class/power_supply/BAT0/capacity" \
    lf="lfrun" \
    set-tv-output="xrandr --fb 1360x768 --output $INTERNAL_DISPLAY --off --noprimary --output $EXTERNAL_DISPLAY --mode 1360x768 --primary ; audio-output EXTERNAL_ONLY ; remaps" \
    exp="xarchiver ~/Home/Others/Archives/Black_Dog.rar" \
    hor="xdg-open /mnt/Shared/Home/GII/3ยบ/General/Horario.pdf 2>/dev/null" \
    nstart="rfkill unblock wifi ; systemctl start NetworkManager" \
    nstop="rfkill block wifi ; systemctl stop NetworkManager" \
    dmcd="source $(which disk-mount-cd)" \
    uv-vpn="sudo openvpn Home/GII/3ยบ/General/VPN/UV.ovpn" \
    focus="mpc clear 1>/dev/null && mpc random on 1>/dev/null && mpc load Classical 1>/dev/null && mpc play 1>/dev/null && music-control notify" \
    share='curl -F "file=@$(find $HOME -maxdepth 2 -type f | dmenu -l 15)" 0x0.st 2>/dev/null | xclip -sel c' \
    sync-gii="rsync -av --delete --rsh=ssh ~/Home/GII/ pi:/home/hache/DRIVE/GII/"
