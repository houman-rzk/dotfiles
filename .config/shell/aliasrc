#!/bin/sh

# Use superior neovim
alias vim="nvim" vimdiff="nvim -d"

# Remove need for sudo in these commands
for command in pacman shutdown reboot mount umount tor systemctl visudo fdisk cfdisk ufw; do
    alias "$command"="sudo $command"
done ; unset command

# Shorter commands
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	l='ls' \
	la='ls -la' \
	ll='ls -l' \
  rm='rm -ri' \
  rmf='rm -rf' \
	ka="killall" \
	g="git" \
	e="$EDITOR" \
	v="$EDITOR" \
	es="edit-script" \
	tt="taskwarrior-tui" \
	as="add-script" \
	trr="transmission-remote" \
	td="transmission-daemon" \
	untar="tar -xvf" \
	pi="pacman -S" \
	piu="pacman -Syu" \
	pr="pacman -Rs" \
  nb="newsboat" \
  dm="udisksctl mount -b" \
  dum="udisksctl unmount -b" \
  dpo="udisksctl power-off -b" \
  ts="torsocks" \
	p="pacman" \
  q="exit" \
  :q="exit" \
  sctl="systemctl" \
  ud="update-dwmblocks" \
  clc="clear-clipboards" \
  mkx="chmod u+x" \
  sxiv="nsxiv -a" \
  iv="nsxiv -a" \
  sv="sudo $EDITOR" \
  z="zathura" \
  ot="setsid -f st" \
  dr="dragon *" \
  duh="du -hd1 ." \
	mk='make && sudo make clean install' \
	lo='kill -9 -1' \
	mo='mk && lo' \
	pm='passmenu' \
  lf="lfrun" \
	off="shutdown -h now" \
  nstart="rfkill unblock wifi" \
  nstop="rfkill block wifi" \

# Main aliases
alias \
  dmcd="source $(which disk-mount-cd)" \
  hst='instr=$(fzf < "$HISTFILE") ; xdotool type "$instr" ; xdotool key Return'  \
  share='curl -F "file=@$(find . -maxdepth 2 -type f | dmenu -l 15)" 0x0.st 2>/dev/null | xclip -sel c' \

source "$XDG_CONFIG_HOME/shell/otherAliases"
