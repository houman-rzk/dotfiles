#!/bin/sh

# Use superior neovim
alias vim="nvim" vimdiff="nvim -d"

# Remove need for sudo in these commands
for command in pacman shutdown reboot mount umount ; do
	alias "$command"="sudo $command"
done ; unset command

# Add some color to your life
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto"

# Shorter commands
alias \
	la='ls -la' \
	ka="killall" \
	g="git" \
	e="$EDITOR" \
	v="$EDITOR" \
	es="edit-script" \
	tt="taskwarrior-tui" \
	as="add-script" \
	trr="transmission-remote" \
	td="transmission-daemon" \
	untar="tar -xvf" \
	pi="pacman -S" \
	piu="pacman -Syu" \
	pr="pacman -R" \
    nc="ncmpcpp" \
	p="pacman"

# Main aliases
alias \
	mk='make && sudo make clean install' \
	lo='kill -9 -1' \
	mo='mk && lo' \
	trackers='get-trackers' \
	monerod="monerod --data-dir $XDG_DATA_HOME/bitmonero" \
	off="shutdown -h now" \
	tst="tabbed -r2 st -w '' && exit" \
	vs="$EDITOR ~/.config/zsh/.zshrc && . ~/.config/zsh/.zshrc" \
	vp="$EDITOR ~/.config/shell/profile && head -n -1 ~/.config/shell/profile | tail -n +3 > /tmp/profile.tmp && . /tmp/profile.tmp" \
	va="$EDITOR $ALIASRC && . $ALIASRC" \
    bl="cat /sys/class/power_supply/BAT0/capacity" \
	vimrc="$EDITOR $XDG_CONFIG_HOME/$EDITOR/init.vim"
