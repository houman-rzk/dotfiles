[options]
background = 24273a
overlay_text_color = cad3f5
overlay_background_color = 363A4F
overlay_background_alpha = ff
overlay = true
overlay_font = JetBrains Mono Nerd Font:11
overlay_position_bottom = true
suppress_default_binds = true

[binds]
j = next
#l = next
#n = next
k = prev
#p = prev
#h = prev
q = quit
<plus> = zoom 1
<minus> = zoom -1
r = rotate by 90
f = fullscreen
o = overlay
gg = goto 1
<Shift+G> = goto -1
p = next_frame
<space> = toggle_playing
<Ctrl+d> = exec mv $imv_current_file $TRASH_DIR && notify -t 1000 -h "Trashed"
<Ctrl+t> = exec mkdir trash | ls && mv $imv_current_file trash && notify -t 1000 -h "Trashed"
<Ctrl+s> = exec cp $imv_current_file /tmp/imv.save && notify -t 1000 -h "Saved in /tmp/imv.save"
