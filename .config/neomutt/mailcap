# HTML
text/html; HOME=$XDG_CACHE_HOME w3m -I %{charset} -T text/html; copiousoutput;
text/plain; $EDITOR %s

#PDFs
application/pdf; zathura %s pdf

#Images
image/png; sxiv %s
image/jpeg; sxiv %s

